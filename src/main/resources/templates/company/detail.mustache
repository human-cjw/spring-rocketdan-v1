{{> layout/header }}

<div class="">
    <div class="weapp-header-company-detail bg-light"></div>

    <div
            class="weapp-company-info-company-detail position-relative"
            style="padding: 48px"
    >
        <!-- 앱솔루트 버튼 -->
        <a href="/company/2/update-form" style="text-decoration: none;">
            <button
                    class="btn btn-primary position-absolute"
                    style="
            left: 65%;
            transform: translateX(-70%);
            margin-top: 70px;
            padding: 12px 20px;
            font-size: 16px;
        "
            >
                업데이트
            </button>
        </a>

        <div class="weapp-company-info-company-detail">
            <div class="weapp-company-logo-company-detail">
                {{#company.logoImageUrl}}
                    <img src="{{company.logoImageUrl}}" onerror="this.src='/images/default-logo.png'"/>
                {{/company.logoImageUrl}}
                {{^company.logoImageUrl}}
                    <img src="/images/default-logo.png"/>
                {{/company.logoImageUrl}}
            </div>
            <div class="weapp-company-name">
                <h3>{{company.nameKr}}</h3>
            </div>
            <div class="weapp-company-desc-company-detail">
                {{company.oneLineIntro}}
            </div>
        </div>
    </div>
    <hr/>
    <div class="weapp-container-company-detail">
        <div class="weapp-container-header-company-detail">
            <h3>정보</h3>
            <hr/>
        </div>

        <div class="weapp-sell-company-detail">
            <div>
                <h2>기업소개</h2>
            </div>
            <div class="weapp-info-card-company-detail">
                <div>
                    <p>{{company.introduction}}</p>
                </div>
                {{#company.infoImageUrl}}
                    <img src="{{company.infoImageUrl}}" onerror="this.src='/images/default-info.png'"/>
                {{/company.infoImageUrl}}
                {{^company.infoImageUrl}}
                    <img src="/images/default-info.png"/>
                {{/company.infoImageUrl}}
            </div>
        </div>

        <div class="weapp-sell-company-detail">
            <div>
                <h2>기술 스택</h2>
            </div>
            <div class="weapp-tech-tags-company-detail">
                {{#company.techStackList}}
                    <span>{{.}}</span>
                {{/company.techStackList}}
            </div>
        </div>

        <div class="weapp-sell-company-detail">
            <div>
                <h2>기업 정보</h2>
            </div>
            <div class="weapp-company-info-box-company-detail">
                <table class="weapp-info-table-company-detail">
                    <tr>
                        <th>설립일</th>
                        <td>{{company.createdAt}}</td>
                    </tr>
                    <tr>
                        <th>이메일</th>
                        <td>{{company.email}}</td>
                    </tr>
                    <tr>
                        <th>문의 담당자</th>
                        <td>
                            {{company.contactManager}}
                            <a href="#" class="weapp-link-company-detail">문의하기</a>
                        </td>
                    </tr>
                    <tr>
                        <th>사무실</th>
                        <td>
                            {{company.address}}
                            <a href="#" class="weapp-icon-link-company-detail">📍</a>
                        </td>
                    </tr>
                    <tr>
                        <th>산업 분야</th>
                        <td>{{company.workFieldName}}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

{{> layout/footer }}