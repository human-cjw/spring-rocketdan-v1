{{> layout/header }}

<div class="py-5">
    <div class="weapp-reset-company-save">
        <div class="weapp-container-company-save">
            <div class="weapp-form-wrapper-company-save">
                <h2 class="weapp-form-title-company-save">기업 등록</h2>
                <hr/>
                <form action="detail.html" class="weapp-form-company-save">
                    <label>한글 기업명</label>
                    <input type="text" placeholder="한글 기업명 입력"/>

                    <label>영문 기업명</label>
                    <input type="text" placeholder="영문 기업명 입력"/>

                    <label>기업소개</label>
                    <input
                            type="text"
                            placeholder="예: 국내 최대 비즈니스 네트워크"
                    />

                    <label>설립일</label>
                    <input type="date"/>

                    <label>사업자등록번호</label>
                    <input type="text" placeholder="숫자만 입력"/>

                    <label>기술 스택</label>
                    <input
                            type="text"
                            placeholder="예: Java, Spring, React"
                    />

                    <label>기업 공식 이메일</label>
                    <input type="email" placeholder="이메일 입력"/>

                    <label>문의 담당자</label>
                    <input type="text" placeholder="담당자"/>

                    <label>사무실</label>
                    <input type="text" placeholder="사무실 주소"/>

                    <label>산업 분야</label>
                    <input
                            type="text"
                            placeholder=",로 구분해서 입력해주세요"
                    />

                    <div class="submit-btn-wrapper-company-save">
                        <button
                                type="submit"
                                class="weapp-submit-btn-company-save btn btn-primary"
                        >
                            등록
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{> layout/footer }}