{{> layout/header }}

<div class="bg-white py-5">
    <div class="weapp-out-job-detail">
        <div class="weapp-outer-box-job-detail">
            <div class="weapp-left-box-job-detail">
                <a href="#">
                    <div class="weapp-l-1-job-detail">
                        <div class="weapp-img2-job-detail">
                            <img
                                    src="/img/Screenshot_10.png"
                                    class="weapp-img2-1-job-detail"
                            />
                        </div>
                        <a href="https://localhost:8080/company/{{jobDetail.companyId}}">{{nameKr}} &gt;</a>

                    </div>
                </a>
                <div class="weapp-l-2-job-detail">
                    {{jobDetail.title}}
                </div>
                <div class="weapp-l-3-job-detail">
                    {{jobDetail.deadline}} | {{jobDetail.careerLevel}} | {{jobDetail.createdAt}}
                </div>
                <div class="weapp-l-4-job-detail">주요업무</div>
                <div>
                    {{jobDetail.description}}
                </div>
            </div>
            <div class="weapp-sum-job-detail">
                <div class="weapp-right-box-job-detail">

                    <a href="/user/job/{{jobDetail.jobId}}/apply-form">
                        <div class="weapp-r-1-job-detail btn-primary btn">
                            지원하기
                        </div>
                    </a>

                    <div class="weapp-inner-box1-job-detail">
                        <div>마감</div>
                        <div>{{jobDetail.deadline}}</div>
                    </div>
                    <div class="weapp-inner-box1-job-detail">
                        <div>지역</div>
                        <div>{{jobDetail.location}}</div>
                    </div>
                    <div class="weapp-inner-box1-job-detail">
                        <div>고용형태</div>
                        <div>{{jobDetail.employmentType}}</div>
                    </div>
                    <div class="weapp-inner-box1-job-detail">
                        <div>경력</div>
                        <div>{{jobDetail.careerLevel}}</div>
                    </div>
                    <div class="weapp-inner-box1-job-detail">
                        <div>산업분야</div>
                        <div>{{jobDetail.workField}}</div>
                    </div>
                    <div class="weapp-inner-box1-job-detail">
                        <div>연봉</div>
                        <div>{{salaryRange.minSalary}} ~ {{salaryRange.maxSalary}}</div>
                    </div>

                    <div class="weapp-inner-box1-job-detail">
                        <div>근무지</div>
                        <div>{{jobDetail.location}}</div>
                    </div>

                    <div class="weapp-book-out-job-detail">
                        <!-- ajax 용 버튼 -->
                        <form method="post" action="/job/{{jobDetail.jobId}}/bookmark">
                            <button type="submit"
                                    style="background: none; border: 1px solid #ccc; border-radius: 6px; padding: 8px 12px; display: flex; align-items: center; gap: 6px;">
                                <i class="fas fa-bookmark
                                    {{#jobDetail.bookmarked}} text-primary {{/jobDetail.bookmarked}}
                                    {{^jobDetail.bookmarked}} text-secondary {{/jobDetail.bookmarked}}">
                                </i>
                                <div>공고 북마크</div>
                            </button>
                        </form>
                    </div>

                </div>

                <div>
                    <div class="weapp-r-recru-job-detail">채용 문의 담당자</div>
                </div>
                <div class="weapp-inner-box2-job-detail">
                    <div class="weapp-img1-job-detail">
                        <img src="user.webp" class="weapp-img1-1-job-detail"/>
                    </div>
                    <div>
                        <div>김태희</div>
                        <div class="weapp-tuter-job-detail">튜터 리크루터</div>
                    </div>
                    <div class="weapp-message-job-detail">메시지</div>
                </div>
            </div>
        </div>
    </div>
</div>

{{> layout/footer }}