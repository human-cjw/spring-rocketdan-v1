{{> layout/header }}

<div class="py-5">
    <div class="weapp-reset-company-save">
        <div class="weapp-container-company-save">
            <div class="weapp-form-wrapper-company-save">
                <h2 class="weapp-form-title-company-save">공고 등록</h2>
                <hr/>
                <form action="/job/save" method="post" class="weapp-form-company-save">
                    <input type="hidden" name="company" value="1"/>
                    <input type="hidden" name="status" value="OPEN"/>

                    <label>공고 제목</label>
                    <input type="text" name="title" placeholder="공고 제목 입력"/>

                    <label>공고 내용</label>
                    <textarea class="form-control" rows="5" id="comment" name="description"></textarea>
                    <br/>

                    <label>근무지</label>
                    <input type="text" name="location" placeholder="근무지 입력"/>

                    <label for="employmentType" class="form-label">고용형태</label>
                    <select class="form-select" id="employmentType" name="employmentType">
                        <option value="">선택</option>
                        <option value="정규직">정규직</option>
                        <option value="계약직">계약직</option>
                        <option value="인턴">인턴</option>
                        <option value="프리랜서">프리랜서</option>
                    </select>
                    <br/>

                    <label>마감일</label>
                    <input type="date" name="deadline"/>

                    <label for="jobGroup" class="form-label">지원직무</label>
                    <select class="form-select" id="jobGroup" name="jobGroup">
                        <option value="">선택</option>
                        <option value="1">백엔드 개발자</option>
                        <option value="2">프론트엔드 개발자</option>
                        <option value="3">풀스택 개발자</option>
                        <option value="4">데이터 엔지니어</option>
                        <option value="5">DevOps 엔지니어</option>
                    </select>
                    <br/>

                    <label>기술 스택</label>
                    <div>

                        <label>
                            <input type="checkbox" name="techStack[]" value="기술스택"/>
                            기술스택
                        </label>

                    </div>

                    <label for="careerLevel" class="form-label">경력</label>
                    <select class="form-select" id="careerLevel" name="careerLevel">
                        <option value="">선택</option>
                        <option value="신입">신입</option>
                        <option value="경력">경력</option>
                    </select>
                    <br/>

                    <label for="workField" class="form-label">업무 분야</label>
                    <select class="form-select" id="workField" name="workField">
                        <option value="">선택</option>
                        <option value="1">IT/소프트웨어</option>
                        <option value="2">금융/보험</option>
                    </select>
                    <br/>

                    <label for="salaryRange" class="form-label">연봉</label>
                    <select class="form-select" id="salaryRange" name="salaryRange">
                        <option value="">선택</option>
                        <option value="1">3000-4000</option>
                        <option value="2">4000-5000</option>
                    </select>
                    <br/>

                    <div class="submit-btn-wrapper-company-save">
                        <button
                                type="submit"
                                class="weapp-submit-btn-company-save btn btn-primary"
                        >
                            등록
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{> layout/footer }}
