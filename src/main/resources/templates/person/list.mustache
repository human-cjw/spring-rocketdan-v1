{{> layout/header }}

<div class="bg-light py-5">
    <div class="weapp-container-person-list">
        <div class="weapp-main-wrapper-person-list">
            <div class="weapp-profile-grid-person-list">

                {{#models}}
                    <div class="weapp-profile-card-person-list" style="position: relative;">

                        <!-- 북마크 버튼 -->
                        <form method="post" action="/resume-bookmark/{{userId}}/toggle" style="position: absolute; top: 10px; right: 10px;">
                            <button type="submit" style="background: none; border: none;">
                                <i class="fas fa-bookmark weapp-bookmark-icon-job-list
                                {{^isBookmarked}} weapp-bookmark-opacity-2 {{/isBookmarked}}"></i>
                            </button>
                        </form>

                        {{#fileUrl}}
                            <img src="{{fileUrl}}" class="weapp-company-logo-person-list"
                                 onerror="this.src='/images/default-logo.png'" />
                        {{/fileUrl}}
                        {{^fileUrl}}
                            <img src="/images/default-logo.png" class="weapp-company-logo-person-list" />
                        {{/fileUrl}}

                        <div class="weapp-company-name-person-list">{{username}}</div>
                        <div class="weapp-company-desc-person-list">{{jobGroupName}}</div>
                    </div>
                {{/models}}

            </div>
        </div>

        <!-- 사이드바 -->
        <div class="weapp-sidebar-person-list">
            <a href="/user/bookmark/person" class="text-decoration-none text-dark">
                <div class="weapp-bookmark-wrapper-job-list">
                    <div class="weapp-bookmark-btn-job-list">
                        <i id="bookIcon" class="fas fa-bookmark"></i>
                        <span>유저 북마크</span>
                    </div>

                </div>
            </a>

            <div class="weapp-search-box-person-list">
                <h3>사람 검색</h3>
                <div class="weapp-filters-person-list"></div>
                <input type="text" placeholder="검색어 입력"/>
            </div>
        </div>
    </div>

    <!-- 페이지네이션 -->
    <div class="weapp-pagination-person-list">
        <button class="weapp-active-person-list"><</button>
        <button>1</button>
        <button>2</button>
        <button>3</button>
        <button>...</button>
        <button>5</button>
        <button>></button>
    </div>
</div>

{{> layout/footer }}
